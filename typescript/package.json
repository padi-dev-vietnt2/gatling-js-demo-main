{
  "name": "gatling-ts-demo",
  "version": "3.14.100",
  "private": true,
  "type": "module",
  "main": "target/bundle",
  "dependencies": {
    "@gatling.io/core": "3.14.101",
    "@gatling.io/http": "3.14.101"
  },
  "devDependencies": {
    "@gatling.io/cli": "3.14.101",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "typescript": "5.8.3"
  },
  "scripts": {
    "clean": "rimraf target",
    "format": "prettier --write \"**/*.ts\"",
    "check": "tsc --noEmit",
    "build": "tsc --noEmit && gatling build --typescript",
    "recorder": "gatling recorder --typescript",
    "basicSimulation": "tsc --noEmit && gatling run --typescript --simulation basicSimulation"
  }
}
